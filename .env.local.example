# Firebase (포탈과 같은 프로젝트 공유)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=yamoo-ai.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=yamoo-ai
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=yamoo-ai.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin (서버사이드용)
# JSON 형태의 서비스 계정 키를 한 줄로 입력
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"yamoo-ai",...}

# Toss Payments
# 테스트 환경
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_xxxxxxxxxxxxxxxxxxxxxxxx
TOSS_SECRET_KEY=test_sk_xxxxxxxxxxxxxxxxxxxxxxxx

# JWT Secret (SSO용 - 포탈과 동일한 값 사용)
JWT_SECRET=your_random_secret_string_here_min_32_characters

# n8n Webhook (비즈엠 알림톡 연동)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/yamoo

# Vercel Cron Secret
CRON_SECRET=your_random_cron_secret_here

# Base URLs
NEXT_PUBLIC_BASE_URL=https://pay.yamoo.ai.kr
NEXT_PUBLIC_PORTAL_URL=https://app.yamoo.ai.kr
